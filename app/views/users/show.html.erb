<div class="row">
	<div class="span4">
		<div class="thumbnail">
			<% if @user.avatar_image.present? %>
				<%= image_tag @user.avatar_image.url %>
			<% else %>
				<img src="http://placehold.it/400x400&text=Super+cool+avatar" alt="Super cool avatar">
			<% end %>
		</div>
	</div>
	<div class="span8">
		<h2><%= @user.name  %></h2>
		<h4><%= @user.email %></h4>
		<hr />
		<%= link_to 'Edit', edit_user_path(@user), :class => "btn" %>
	</div>
</div>